#include <stdio.h>
int n,i=0;
int count=0;
int str[10];
int main()
{
    scanf("%d",&n);
    int a=n;
    while(n!=0)
    {
       str[i]=n%10;
        n/=10;
        i++;
        count++;
    }
      printf("%d",count);
    
       int b= str[count-5]*10000+str[count-4]*1000+str[count-3]*100+str[count-2]*10+str[count-1];
       //printf("%d",b);
    if(a==b)
    {
        printf("no. is palindrome");
    }
    else
    {
        printf("no. is not palindrome");
    }
  

    return 0;
}
