#include <stdio.h>
int n,count=0;
int main()
{
    scanf("%d",&n);
    while(n)
    {
        n>>=1;
        if(n&1==1)    
        {
            count++;
            
        }
    }
    if(count==1)  // only one bit should be set
    {
        printf("yes");
    }

    return 0;
}
