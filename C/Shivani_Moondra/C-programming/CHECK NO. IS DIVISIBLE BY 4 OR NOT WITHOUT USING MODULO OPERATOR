/******************************************************************************

CHECK NO. IS DIVISIBLE BY 4 OR NOT WITHOUT USING MODULO OPERATOR

*******************************************************************************/
#include <stdio.h>
int n;
int main()
{
    scanf("%d",&n);                            // enter the number
    while(n>0)                                // if no. is positive
    {
      if(n==0)                               
      {
        printf("no.is divisibe by 4");
        break;
      }
       n=n-4;                                 //keep subtracting 4 from n if n becomes zero that means it is divisible by 4.
       
    }
    if(n<0)
    {
        printf("no.is not divisibe by 4");
    }
    

    return 0;
}
